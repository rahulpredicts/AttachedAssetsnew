{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["server/**/*", "client/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
